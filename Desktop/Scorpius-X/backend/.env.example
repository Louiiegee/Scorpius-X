# Elite Mempool System Environment Variables Example
# Copy this file to .env and fill in your actual values

# Blockchain RPC Configuration
INFURA_PROJECT_ID=your_infura_project_id_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Bot Wallet Configuration (CRITICAL - Keep these secure!)
BOT_WALLET_ADDRESS=0x...
BOT_WALLET_PRIVATE_KEY=0x...

# API Security
ELITE_ADMIN_API_KEY=your_super_secure_admin_key_here
ELITE_VIEWER_API_KEY=your_viewer_key_here

# Network Configuration Overrides
ELITE_API_HOST=127.0.0.1
ELITE_API_PORT=8000
ELITE_LOG_LEVEL=INFO

# RPC URLs (comma-separated)
ELITE_ETH_RPC_URLS=wss://mainnet.infura.io/ws/v3/YOUR_PROJECT_ID,https://mainnet.infura.io/v3/YOUR_PROJECT_ID
ELITE_ETH_HTTP_RPC_FOR_SYNC=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Flashbots Configuration
ELITE_FLASHBOTS_RPC_URL=https://rpc.flashbots.net

# Optional: Database Configuration
DATABASE_URL=postgresql://user:password@localhost/elite_mempool

# Optional: Alert Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
