{
  "appId": "com.scorpius.cybersecurity.dashboard",
  "productName": "Scorpius Cybersecurity Dashboard",
  "copyright": "Copyright Â© 2024 Scorpius Security",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/**/*",
    "electron/main.cjs",
    "electron/preload.cjs",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "electron/assets",
      "to": "assets"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico",
    "artifactName": "Scorpius-Cybersecurity-Dashboard-${version}-Windows-${arch}.${ext}",
    "requestedExecutionLevel": "asInvoker",
    "publisherName": "Scorpius Security",
    "verifyUpdateCodeSignature": false,
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "electron/assets/icon.ico",
    "uninstallerIcon": "electron/assets/icon.ico",
    "installerHeaderIcon": "electron/assets/icon.ico",
    "deleteAppDataOnUninstall": true,
    "runAfterFinish": true,
    "menuCategory": "Security",
    "shortcutName": "Scorpius Cybersecurity Dashboard",
    "displayLanguageSelector": false,
    "installerLanguages": ["en_US"],
    "language": "1033",
    "multiLanguageInstaller": false,
    "packElevateHelper": true,
    "perMachine": false,
    "allowElevation": true,
    "include": "electron/installer/windows/installer.nsh"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/assets/icon.icns",
    "artifactName": "Scorpius-${version}-${arch}.${ext}",
    "category": "public.app-category.developer-tools",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "dmg": {
    "title": "Scorpius Cybersecurity Dashboard",
    "artifactName": "Scorpius-${version}.${ext}",
    "background": "electron/assets/dmg-background.png",
    "iconSize": 100,
    "contents": [
      {
        "x": 100,
        "y": 200
      },
      {
        "x": 400,
        "y": 200,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 500,
      "height": 300
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      },
      {
        "target": "tar.gz",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png",
    "artifactName": "Scorpius-${version}-${arch}.${ext}",
    "category": "Security",
    "synopsis": "Advanced Cybersecurity Dashboard for Blockchain Security",
    "description": "Scorpius is a comprehensive cybersecurity platform providing smart contract vulnerability scanning, MEV operations monitoring, mempool analysis, and threat detection capabilities.",
    "desktop": {
      "Name": "Scorpius Dashboard",
      "Comment": "Advanced Cybersecurity Dashboard",
      "Categories": "Security;Development;Network;",
      "Keywords": "security;blockchain;ethereum;defi;cybersecurity;",
      "StartupWMClass": "scorpius"
    }
  },
  "appImage": {
    "artifactName": "Scorpius-${version}-${arch}.${ext}",
    "synopsis": "Advanced Cybersecurity Dashboard"
  },
  "deb": {
    "artifactName": "Scorpius-${version}-${arch}.${ext}",
    "synopsis": "Advanced Cybersecurity Dashboard for Blockchain Security",
    "priority": "optional",
    "depends": [
      "gconf2",
      "gconf-service",
      "libnotify4",
      "libappindicator1",
      "libxtst6",
      "libnss3",
      "libxss1",
      "libasound2"
    ]
  },
  "rpm": {
    "artifactName": "Scorpius-${version}-${arch}.${ext}",
    "synopsis": "Advanced Cybersecurity Dashboard",
    "fpm": ["--rpm-os=linux"]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "scorpius-security",
      "repo": "scorpius-dashboard",
      "private": true
    }
  ],
  "buildVersion": "1.0.0",
  "compression": "normal",
  "asar": true,
  "asarUnpack": ["node_modules/electron/**/*"],
  "afterSign": "electron/notarize.js",
  "protocols": [
    {
      "name": "scorpius",
      "schemes": ["scorpius"]
    }
  ]
}
