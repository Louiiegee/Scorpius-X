# Scorpius Security Platform - Environment Variables
# Docker Configuration

# PostgreSQL Database
POSTGRES_USER=scorpius
POSTGRES_PASSWORD=scorpius123
POSTGRES_DB=scorpius

# Redis Cache
REDIS_PASSWORD=

# Backend Configuration
DATABASE_URL=postgresql://scorpius:scorpius123@scorpius-db:5432/scorpius
REDIS_URL=redis://scorpius-redis:6379
SECRET_KEY=scorpius-super-secret-key-change-in-production
MYTHX_API_KEY=your-mythx-api-key-here

# Backend API Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=3001
WEBSOCKET_PORT=8001

# Frontend Configuration (for Docker internal networking)
VITE_API_BASE_URL=http://scorpius-backend:3001
VITE_WS_URL=ws://scorpius-backend:8001
VITE_ENABLE_LIVE_DATA=true
VITE_ENABLE_MOCK_DATA=false
VITE_DISABLE_CLIENT_INTEGRITY=true
VITE_HMAC_DISABLED=true

# Development/Debug Settings
NODE_ENV=production
PYTHONPATH=/app
