# Environment Variables for Scorpius Security Platform

# Database Configuration
DATABASE_URL=postgresql://scorpius:scorpius123@localhost:5432/scorpius
POSTGRES_DB=scorpius
POSTGRES_USER=scorpius
POSTGRES_PASSWORD=scorpius123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WS_PORT=8001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8001
NEXT_PUBLIC_ANVIL_URL=http://localhost:8545

# Blockchain Configuration
ANVIL_HOST=0.0.0.0
ANVIL_PORT=8545
ANVIL_CHAIN_ID=31337

# Security Keys (Change in production!)
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# External API Keys (Optional)
MYTHX_API_KEY=your_mythx_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
INFURA_PROJECT_ID=your_infura_project_id

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./data/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Settings
NODE_ENV=development
PYTHONPATH=/app
DEBUG=true
