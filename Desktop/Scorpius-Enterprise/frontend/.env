# Scorpius Frontend Environment Configuration
# Docker Configuration - External Access

# Backend API URLs (for browser access from host machine)
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:8001

# Live Data Configuration
VITE_ENABLE_LIVE_DATA=true
VITE_ENABLE_MOCK_DATA=false

# Security & Auth Settings
VITE_DISABLE_CLIENT_INTEGRITY=true
VITE_DEV_AUTH_BYPASS=false
VITE_HMAC_DISABLED=true

# Development Settings
NODE_ENV=production
