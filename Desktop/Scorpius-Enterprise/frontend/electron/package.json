{
  "name": "scorpius-electron",
  "version": "1.0.0",
  "description": "Scorpius - Blockchain Security Analysis Platform (Electron)",
  "main": "main.js",
  "homepage": "./",
  "author": "Scorpius Security Team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^22.3.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.scorpius.security",
    "productName": "Scorpius",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*",
      "../public/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "../public/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../public/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../public/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "scorpius-security",
      "repo": "scorpius-desktop"
    }
  },
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "electron-pack": "electron-builder build",
    "dist": "electron-builder build --publish=never",
    "dist-mac": "electron-builder build --mac",
    "dist-win": "electron-builder build --win",
    "dist-linux": "electron-builder build --linux",
    "publish": "electron-builder build --publish=always"
  }
}
