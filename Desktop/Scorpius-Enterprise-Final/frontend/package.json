{
  "name": "scorpius-cybersecurity-dashboard",
  "private": true,
  "version": "1.0.0",
  "description": "Enterprise-grade cybersecurity dashboard for blockchain security analysis",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 8080",
    "build": "npm run typecheck && vite build",
    "build:production": "npm run clean && npm run typecheck && npm run lint && npm run test && vite build --mode production",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "clean": "rimraf dist node_modules/.vite",
    "electron:build": "npm run build && electron-builder",
    "docker:build": "docker build -t scorpius-dashboard .",
    "dev:full": "concurrently \"npm run dev\" \"cd ../backend && python app.py\""
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@tanstack/react-query": "^5.56.2",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vitest": "^3.1.4"
  }
}
